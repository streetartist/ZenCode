    "marked-terminal": "^7.2.0",
    "openai": "^4.73.0",
    "ora": "^8.1.0",
    "react": "^18.3.1",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@types/diff": "^6.0.0",
    "@types/node": "^22.0.0",
